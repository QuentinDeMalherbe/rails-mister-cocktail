<div class="container">
  <div class="button-central">
      <%= link_to 'crÃ©e ton cocktail', cocktail_path(@cocktail)%>
  </div>

  <div class="wrapper">
    <% @ingredients.each do |ingredient| %>
      <div class="card-ingredient" style="width: 18rem;">
        <%= image_tag "cocktail.png", alt: ingredient.name, class:"card-img-top"%>
        <div class="card-body">
          <h5 class="card-title"> <p><%= ingredient.name %></p> </h5>
        </div>
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%=  f.hidden_field :cocktail_id, :value => @cocktail.id %>
          <%=  f.hidden_field :ingredient_id, :value => ingredient.id %>
          <%= f.input :description %>
          <%= f.submit "add", class: "btn btn-primary" %>
        <% end %>
      </div>
    <% end  %>
  </div>
</div>
